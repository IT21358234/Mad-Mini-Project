<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:scaleType="centerInside"
            android:src="@drawable/travelite_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/styles_linear_layout"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/regHotelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Fill Details to Register"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtResName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/styles_edit_text"
            android:ems="10"
            android:hint="Restaurant Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHighlight="@color/main_color"
            android:textColorHint="@color/btnBackNav"
            android:textColorLink="@color/main_color" />

        <EditText
            android:id="@+id/edtResRegNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/styles_edit_text"
            android:ems="10"
            android:hint="Restaurant Registration Number"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHighlight="@color/main_color"
            android:textColorHint="@color/btnBackNav"
            android:textColorLink="@color/main_color" />

        <EditText
            android:id="@+id/edtResBusinessEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/styles_edit_text"
            android:ems="10"
            android:hint="Business Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHighlight="@color/main_color"
            android:textColorHint="@color/btnBackNav"
            android:textColorLink="@color/main_color" />

        <EditText
            android:id="@+id/edtResBusinessPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/styles_edit_text"
            android:ems="10"
            android:hint="Busines Phone No."
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHighlight="@color/main_color"
            android:textColorHint="@color/btnBackNav"
            android:textColorLink="@color/main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/styles_edit_text"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Star Rated"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/selectResStarRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:entries="@array/star"
                android:textColor="@color/main_color" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtResBusinessLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/styles_edit_text"
            android:ems="10"
            android:hint="Location (Address)"
            android:inputType="textMultiLine"
            android:lines="6"
            android:minLines="3"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHighlight="@color/main_color"
            android:textColorHint="@color/btnBackNav"
            android:textColorLink="@color/main_color" />


        <Button
            android:id="@+id/btnSubmitRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/round_corner"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/main_color" />
    </LinearLayout>

</LinearLayout>