<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:text="Tourist Registration"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="690dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/styles_linear_layout">

    <EditText
        android:id="@+id/touristfirstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="First Name"
        android:textStyle="bold"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/touristlastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Last Name"
        android:textStyle="bold"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/touristemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Email"
        android:textStyle="bold"
        android:inputType="textPersonName" />

        <EditText
            android:id="@+id/touristusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:text="Username"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/touristpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/touristconfirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/touristcontactnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:hint="Contact Number"
            android:inputType="number"
            android:textStyle="bold" />

        <EditText
        android:id="@+id/touristbirthcountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Birth Country"
        android:textStyle="bold"
        android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    <Spinner
        android:id="@+id/touristgender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

        <Button
            android:id="@+id/touristbtnReg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:inputType="textCapWords"
            android:text="Register"
            android:textColor="@color/div_box"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/main_color" />

        <Button
            android:id="@+id/btncanc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:inputType="textCapWords"
            android:text="Cancel"
            android:textColor="@color/div_box"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/main_color" />

</LinearLayout>
</LinearLayout>












