<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/main_color"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_transport_login_scene">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/travelite_logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:text="welcome Back"
        android:textAlignment="center"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styles_linear_layout"
        android:orientation="vertical">

        <EditText
            android:id="@+id/vehicleOwnerUserName_Transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/styles_edit_text"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"

            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
             />


        <EditText
            android:id="@+id/vehicleOwnerPassword_Transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/styles_edit_text"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"

            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
              />

        <Button
            android:id="@+id/login2Button_Transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/round_corner"
            android:text="Login"
            android:textColor="@color/white"
            app:backgroundTint="@color/main_color" />

    </LinearLayout>
</LinearLayout>